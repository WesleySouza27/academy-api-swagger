{
  "compilerOptions": {
    "target": "es2016",                                 
    "module": "commonjs",                               
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "rootDirs": ["./src", "./tests"],
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@database/*": ["src/database/*"],
      "@server/*": ["src/*"]
    }                                
  },
  "include": ["./src/**/*.ts", "./tests/**/*.ts"],
  "exclude": ["node_modules"]
}
